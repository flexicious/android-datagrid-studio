<grid enableFooters="true" enableFilters="true">
    <level selectedKeyField="id">
        <columns>
            <column dataField="legalName" headerText="Legal Name" columnLockMode="left"/>
            <column dataField="annualRevenue" headerText="Annual Revenue" textAlign="right"
                    headerAlign="center" footerLabel="Avg:" footerOperation="average" footerAlign="center"
                    footerOperationPrecision="2" footerFormatter="getCurrencyFormatter"
                    labelFunction="dataGridFormatCurrencyLabelFunction"
                    enableIcon="true" icon="executeMethodOnDelegate__getImageResourceInfo"  paddingRight="80"
                    iconRight="5"  filterControl="TextInput"/>
            <column dataField="numEmployees" headerText="Num Employees" textAlign="right" footerLabel="Avg:"
                    footerOperation="average" footerOperationPrecision="2" footerFormatter="getCurrencyFormatter"
                    labelFunction="dataGridFormatCurrencyLabelFunction" enableIcon="true"
                    icon="executeMethodOnDelegate__getImageResourceInfo" 
                    paddingRight="80"
                    iconRight="5" iconHandCursor="true" filterControl="TextInput"/>
            <column dataField="earningsPerShare"
                    headerText="EPS"
                    textAlign="right" footerLabel="Avg:" footerOperation="average"
                    footerFormatter="getCurrencyFormatter"
                    labelFunction="dataGridFormatCurrencyLabelFunction" enableIcon="true" iconHandCursor="true"
                    icon="executeMethodOnDelegate__getImageResourceInfo" iconLeft="5" filterControl="TextInput">
            </column>
            <column dataField="lastStockPrice" headerText="Stock Price" textAlign="right" footerLabel="Avg:"
                    footerOperation="average" footerOperationPrecision="2" footerFormatter="getCurrencyFormatter"
                    labelFunction="dataGridFormatCurrencyLabelFunction" enableIcon="true"
                    iconFunction="IconFunctions_dynamicIconFunction" paddingRight="80" iconRight="5"
                    iconHandCursor="true"/>
            <column hideText="true" enableIcon="true" icon="executeMethodOnDelegate__getImageResourceSearch"
                    iconToolTip="This column shows only an icon, no text." iconHandCursor="true"
                    columnWidthMode="fixed" width="30" iconLeft="10"/>
        </columns>
    </level>
</grid>