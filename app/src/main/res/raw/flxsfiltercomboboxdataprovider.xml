<grid enableFilters="true"
      preferencePersistenceKey="filterComboboxDataprovider"
      creationComplete="filterComboboxDataprovider_creationCompleteHandler"
      filterPageSortChange="filterComboboxDataprovider_filterPageSortChangeHandler"

      enableExport="true"
      forcePagerRow="true" enablePaging="true">
    <level>
        <columns>
            <column dataField="label" filterControl="TextInput" filterOperation="BeginsWith"/>
            <column dataField="state" id="stateCol" filterControl="MultiSelectComboBox"
                    filterComboBoxBuildFromGrid="false"/>
            <column dataField="startDate" format="date" filterControl="DateComboBox"/>
        </columns>
    </level>
</grid>